{
  "manifest_version": 3,
  "name": "Screen Time Tracker",
  "version": "1.0.0",
  "description": "Track your browser usage with accurate, local-only time tracking",
  "permissions": [
    "tabs",
    "windows",
    "storage",
    "idle"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Screen Time Tracker"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
